<!DOCTYPE html>

<br><br>

<div class='lobby'>
	<div class='lobbyCol scroll' id='userCol'><h3>Online Users</h3></div>
	<div class='lobbyCol scroll' id='gameCol'><h3>Games</h3></div>
	<div class='lobbyCol' id='controller'>
		<div class='mainView'>
			<button id='createGame'>Create Game</button>
			<button id='highScoresBtn'>High Scores</button>
		</div>

		<div class='highScoresView'>
			<button id='mainViewBtn'>Back</button>
			<h2>High Scores</h2>
			<table id='highScores'></table>
		</div>

		<div class="gameInfoView">
			<button id='mainViewBtn'>Back</button>
			<h2 id='infoTitle'>Create Game</h2>
			<h3 id='host'>Host</h3>

			<h4>Players</h4>
			<h5>
				<ul id='players'>
					<li>Waiting...</li>
					<li>Waiting...</li>
					<li>Waiting...</li>
					<li>Waiting...</li>
				</ul>	
			</h5>

			<div class='errorDiv'></div>
			<button id='leaveLobbyGameBtn'>Leave Game</button>
			<button id='startGameBtn'>Start Game</button>
			<button id='joinGameBtn'>Join Game</button>
		</div>
	</div>
</div>

<div class='game'>
<canvas class='gameCanvas'></canvas>
<div id='instructDiv'></div>
<h2>Score</h2>
<ul id='playerScores'>
</ul>
<button id='leaveGameBtn'>Leave Game</button>
</div>

